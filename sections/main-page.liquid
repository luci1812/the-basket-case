<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  .content-page h3 + p {
    margin-bottom: 32px;
  }

  .content-page h3 {
    color: var(--gradient-base-accent-2);
    margin-top: 0;
    margin-bottom: 16px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .content-page h3 + p {
      margin-bottom: 48px;
    }
  }
{%- endstyle -%}

{% render 'banner-page', heading: page.title ,
  image: section.settings.image, 
  image_metafield: page.metafields.custom.image_banner,
  image_mb: section.settings.image_mb, 
  image_metafield_mb: page.metafields.custom.image_banner_mobile,
  bg_color: section.settings.bg_color,
  color: section.settings.color
%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding content-page">
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Banner"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#3D2577"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text color",
      "default": "#E4D0C9"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mb",
      "label": "Image mobile"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
