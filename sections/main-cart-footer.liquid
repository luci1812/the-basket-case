{{ 'component-cart.css' | asset_url | stylesheet_tag }}
{{ 'component-totals.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-discounts.css' | asset_url | stylesheet_tag }}

<div class="cart-footer__wrap">
  <div
    class="page-width--medium{% if cart == empty %} is-empty{% endif %}"
    id="main-cart-footer"
    data-id="{{ section.id }}"
  >
    <div>
      <div class="cart__footer">    
        <div class="cart__blocks">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'subtotal' -%}
                <div class="js-contents" {{ block.shopify_attributes }}>
                  <div class="totals">
                    <h2 class="totals__subtotal">{{ 'sections.cart.subtotal' | t }}:</h2>
                    <p class="totals__subtotal-value h2">{{ cart.total_price | money }}</p>
                  </div>

                  <div>
                    {%- if cart.cart_level_discount_applications.size > 0 -%}
                      <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                        {%- for discount in cart.cart_level_discount_applications -%}
                          <li class="discounts__discount discounts__discount--position">
                            {%- render 'icon-discount' -%}
                            {{ discount.title }}
                            (-{{ discount.total_allocated_amount | money }})
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  </div>

                  <small class="tax-note caption-large rte">
                    {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                      {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- elsif cart.taxes_included -%}
                      {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                    {%- elsif shop.shipping_policy.body != blank -%}
                      {{
                        'sections.cart.taxes_and_shipping_policy_at_checkout_html'
                        | t: link: shop.shipping_policy.url
                      }}
                    {%- else -%}
                      {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                    {%- endif -%}
                  </small>
                </div>
              {%- else -%}

              <div class="field__checkbox">
                <label class="visually-hidden" for="cart-input-checkbox">{{ settings.button_term_conditions }}</label>
                <input type="checkbox" class="cart-input__checkbox" id="cart-input-checkbox" checked>
                <div class="cart_chekbox--title">{{ settings.button_term_conditions }}</div>
              </div>

                <div class="cart__ctas" {{ block.shopify_attributes }}>
                  <link
                    href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap"
                    rel="stylesheet"
                  >
                  <link
                    href="https://fonts.googleapis.com/icon?family=Material+Icons"
                    rel="stylesheet"
                  >
                  <link rel="stylesheet" href="https://scheduling-widget-seven.vercel.app/styles.css">
                  <app-root></app-root>
                  <script src="https://scheduling-widget-seven.vercel.app/runtime.js" type="module"></script>
                  <script src="https://scheduling-widget-seven.vercel.app/polyfills.js" type="module"></script>
                  <script src="https://scheduling-widget-seven.vercel.app/main.js" type="module"></script>

                  <noscript>
                    <button type="submit" class="cart__update-button button button--secondary" form="cart">
                      {{ 'sections.cart.update' | t }}
                    </button>
                  </noscript>

                  <button
                    type="submit" 
                    id="checkout"
                    disabled
                    class="cart__checkout-button button button--primary button--large"
                    name="checkout"
                    {% if cart == empty %}
                      disabled
                    {% endif %}
                    form="cart"
                  >
                    {{ 'sections.cart.checkout' | t }}
                  </button> 

                  {% comment %} <a href="/checkout"  id="checkout"
                  disabled
                  class="cart__checkout-button button button--primary button--large disabled"
                  name="checkout"
                  {% if cart == empty %}
                    disabled
                  {% endif %}>{{ 'sections.cart.checkout' | t }}</a> {% endcomment %}
                </div>
                {%- if additional_checkout_buttons and block.settings.show_cart_dynamic == true -%}
                  <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
                    {{ content_for_additional_checkout_buttons }}
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {% endfor %}          

          <div class="drawer__footer--note cart__footer--note">
            <div class="subtitle--small">
              {{ settings.drawer_description }}
            </div>
            <div class="subtitle__extra--small">
              {{ settings.drawer_note }}
            </div>
          </div>

          <div id="cart-errors"></div>
        </div>
      </div>
    </div>
  </div>

  {% render 'icon-line', style: 'color: var(--color-border)' %}
</div>

<script>
  products = [{%- for item in cart.items -%}{{ item | json }}{% unless forloop.last %},{% endunless %}{% endfor %}];
  document.addEventListener('DOMContentLoaded', function () {
    function isIE() {
      const ua = window.navigator.userAgent;
      const msie = ua.indexOf('MSIE ');
      const trident = ua.indexOf('Trident/');

      return msie > 0 || trident > 0;
    }

    if (!isIE()) return;
    const cartSubmitInput = document.createElement('input');
    cartSubmitInput.setAttribute('name', 'checkout');
    cartSubmitInput.setAttribute('type', 'hidden');
    document.querySelector('#cart').appendChild(cartSubmitInput);
    document.querySelector('#checkout').addEventListener('click', function (event) {
      document.querySelector('#cart').submit();
    });
  });


</script>

{% schema %}
{
  "name": "t:sections.main-cart-footer.name",
  "class": "cart__footer-wrapper",
  "blocks": [
    {
      "type": "subtotal",
      "name": "t:sections.main-cart-footer.blocks.subtotal.name",
      "limit": 1
    },
    {
      "type": "buttons",
      "name": "t:sections.main-cart-footer.blocks.buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_cart_dynamic",
          "label": "Show cart dynamic checkout",
          "default": true
        }
      ]
    },
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
